FROM ubuntu:22.04

RUN apt-get update -y && \
    apt-get install -y \
    git \
    cmake \
    build-essential \
    libreadline-dev \
    libpthread-stubs0-dev

RUN git clone https://github.com/lenguaje-latino/latino-core
WORKDIR latino-core/
RUN cmake . && make install

WORKDIR proyecto/
COPY hola_mundo.lat .

CMD ["latino", "hola_mundo.lat"]
