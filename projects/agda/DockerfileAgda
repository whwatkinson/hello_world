FROM ubuntu:22.04
LABEL maintainer="Harry Watkinson <w.h.watkinson@gmail.com>"

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update -y && \
    apt-get install -y \
    ghc \
    cabal-install \
    pkg-config \
    zlib1g-dev \
    libncurses5-dev

RUN cabal update && \
    cabal install Agda

WORKDIR /usr/project
COPY hello_world.agda .

RUN agda --compile hello_world.agda
CMD ["./hello_world"]
