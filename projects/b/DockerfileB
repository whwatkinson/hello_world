FROM ubuntu:22.04

RUN apt-get update -y && \
    apt-get install -y gcc git

RUN apt install -y g++ libglu1-mesa-dev libasound2-dev libfreetype6-dev libxpm-dev libxft-dev libxxf86vm-dev libpulse-dev libopenal-dev libwebkit2gtk-4.0-dev libgtk-3-dev

RUN git clone https://github.com/blitz-research/blitzmax.git

COPY main.b .
COPY ybc-0.5-linux.tar.gz .

RUN tar -zvxf ybc-0.5-linux.tar.gz

CMD ["tail", "-f", "/dev/null"]