FROM node:19.4.0

RUN npm install -g npm@latest &&\
    npm install purescript spago -g &&\
    npm install -g --save-exact esbuild

RUN mkdir my-project/

WORKDIR my-project/

RUN spago init

COPY hello_world.purs .

RUN spago build
RUN spago bundle-app


CMD ["node", "index.js"]

#works but prints an emoji?!?

#CMD ["tail", "-f", "/dev/null"]

