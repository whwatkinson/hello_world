FROM ubuntu:22.04
RUN apt-get update -y

RUN apt-get install xz-utils make gcc -y

COPY bcpltape.tar.xz .
RUN tar -xJf bcpltape.tar.xz

COPY hello_world.bcl .

CMD ["tail", "-f", "/dev/null"]

