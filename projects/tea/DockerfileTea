FROM openjdk:8

RUN apt-get update -y && \
    apt-get install -y \
    maven \
    unzip
# TODO wget this
COPY tea-master.zip .
RUN unzip tea-master.zip
RUN rm tea-master.zip

RUN cd tea-master/modules && mvn -DskipTests=false
ENV PATH=$PATH:/tea-master/bin

COPY hello_world.tea .

CMD ["tsh", "hello_world.tea"]
