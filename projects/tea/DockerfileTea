FROM ubuntu:22.04
LABEL maintainer="Harry Watkinson <w.h.watkinson@gmail.com>"

ENV DEBIAN_FRONTEND=noninteractive

# Update package list and install required packages
RUN apt-get update -y && \
    apt-get install -y \
    maven \
    git \
    openjdk-8-jdk

# Set JAVA_HOME environment variable
ENV JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
ENV PATH=$JAVA_HOME/bin:$PATH

# Set working directory to /usr/lib
WORKDIR /usr/lib

# Clone the repository and build the project
RUN git clone https://github.com/jorgefranconunes/tea.git && \
    cd tea/modules && \
    mvn clean install -DskipTests=false

# Add the tea bin directory to the PATH
ENV PATH=$PATH:/usr/lib/tea/bin

# Set working directory to /usr/project
WORKDIR /usr/project

# Copy hello_world.tea into the container
COPY hello_world.tea .

# Command to run the script
CMD ["tsh", "hello_world.tea"]
