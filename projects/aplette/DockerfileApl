FROM ubuntu:22.04

RUN apt-get update -y && \
    apt-get install -y libreadline8 libreadline-dev bison make git gcc

RUN git clone https://github.com/gregfjohnson/aplette.git
RUN cd aplette && ./configure && make

ENV PATH=/aplette/source:$PATH

WORKDIR /project
COPY hello_world.apl .

COPY run.sh .
RUN chmod +x run.sh

CMD ["./run.sh"]