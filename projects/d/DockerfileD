FROM ubuntu:22.04

RUN apt-get update && \
    apt-get install -y \
    curl \
    gcc \
    xz-utils \
    build-essential \
    wget

RUN wget https://downloads.dlang.org/releases/2023/dmd.2.102.2.linux.tar.xz
RUN tar -xJf dmd.2.102.2.linux.tar.xz && rm dmd.2.102.2.linux.tar.xz
RUN mv dmd2/ /usr/lib/
ENV PATH=/usr/lib/dmd2/linux/bin64:$PATH

WORKDIR /usr/project
COPY main.d .

RUN dmd main.d
CMD ["./main"]
