FROM ubuntu:22.04


RUN apt-get update -y
RUN apt-get install software-properties-common apt-transport-https -y
RUN apt-key adv --recv-keys --keyserver hkp://keyserver.ubuntu.com:80 0xB4112585D386EB94

RUN add-apt-repository https://dl.hhvm.com/ubuntu -y
#RUN apt-get update -y
#RUN apt-get install hhvm -y


COPY hello_world.hh .

CMD ["tail", "-f", "/dev/null"]

#https://docs.hhvm.com/hhvm/installation/building-from-source
