FROM ubuntu:22.04

RUN apt-get update -y

COPY euphor31.tar .

RUN tar -xvz -f euphor31.tar
RUN rm euphor31.tar

ENV PATH=/euphoria/bin:$PATH

ENV EUDIR=/euphoria/

COPY hello_world.ex .

CMD ["tail", "-f", "/dev/null"]

