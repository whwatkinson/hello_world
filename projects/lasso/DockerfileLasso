FROM ubuntu:22.04

RUN apt-get update -y && \
    apt-get install software-properties-common -y && \
    apt-get install gnupg -y && \
    apt-key adv --fetch-keys http://debianrepo.lassosoft.com/lassosoft-public.gpg.key && \
    add-apt-repository "deb [arch=amd64] http://debianrepo.lassosoft.com/ stable main" -y

COPY hello_world .

CMD ["tail", "-f", "/dev/null"]

# https://www.lassosoft.com/Lasso-9-3-release-notes
# http://debianrepo.lassosoft.com/